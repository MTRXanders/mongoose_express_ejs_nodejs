<% include ../layout/header.ejs %>

<div class="main">
    <div class="container">
      <div class="content add-post">
       <form method="post" class="post-form">
        <% if(post.title){ %>
        <h2>Редактирование поста</h2>

        <% } else { %>
        <h2>Создания поста</h2>

        <% } %>
            <div class="form-group">
              <label for="post-title">Заголовок</label>
              <input type="text" id="post-title" name="title"
               value="<%= post.title %>"/>
            </div>
            <div class="form-group">
              <label for="post-body">Текст</label>
              <textarea id="post-body" ><%= post.body %></textarea>
            </div>

            <div id="fileinfo">
                <% for(var i= post.uploads.length-1; i > -1 ; --i){ %>
                <div class="img-container" id="<%=post.uploads[i].id %>"><img src="/uploads<%=post.uploads[i].path %>" alt=""></div>
                <% } %>
                <input type="hidden" id="post-id" name="postId"
                value="<%= post.id %>">
                <label for="file" class="custom-file-upload">
                <input type="file" name="file" id="file" required />+
                </label>
            </div>

            <div class="buttons">
              <button class="save-button secondary-inverse">Сохранить как черновик</button>
              <button class="publish-button">Опубликовать</button>
            </div>
          </form>

          
      </div>
      <% include ../layout/sidebar.ejs %>

    </div>
  </div>
<% include ../layout/footer.ejs %>

