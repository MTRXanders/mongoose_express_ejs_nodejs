        <li id="<%= item.id %>">
            <div class="head">
                <a href="/users/<%= item.owner.login %>"><%= item.owner.login %></a>
                <span class="date">
                        <%= moment(item.createdAt).fromNow(); %>
                </span>
              <% if(item.owner.login === user.login) { %>
