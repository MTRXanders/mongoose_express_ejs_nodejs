            <% console.log(current)%>
            <%if(current > 1){ %>
            <li>
              <a href="/archive/1">
              <svg class="icon-svg svg-first"  viewBox="0 0 28 24"><path d="M8.452 5.455l2.93 3.192c.89.969 1.335 1.361 2.225 1.909h-13.608v2.773h13.634c-.838.5-1.492 1.102-2.252 1.913l-2.93 3.192 2.276 1.964 7.588-8.452-7.588-8.452-2.276 1.961zM24.297 0h3.087v23.891h-3.087v-23.891z"></path></svg>
              </a>
            </li>
            <li>
                <a class="left-pagination" href="/archive/<%= Number(current)-1 %>">
                  <svg width="6px" height="40px" viewBox="0 20 40 40" >
                      <polyline fill="none" stroke="rgba(108, 121, 127,0.6)" stroke-width="12" stroke-linecap="round" stroke-linejoin="round" points="
                    45.63,65.8 0.375,38.087 55.63,0.375 "/>
                   </svg>  
                </a>
            </li>
          <% } %>
          <% for(let i=0; i< pages; ++i){ %>
          
          <% if(current == i+1){ %>
            <li class="active">
                <a  href="/archive/<%= i+1 %>"><%= i+1 %></a>
            </li>
          <% } else { %>
            <li>
              <a href="/archive/<%= i+1 %>"><%= i+1 %></a>
            </li>
